  CODEN =        "JGTOFD",
  ISSN =         "1086-7651",
  bibdate =      "Thu Oct 12 17:08:13 2000",
  bibsource =    "http://www.acm.org/jgt/issues.html",
  URL =          "http://www.acm.org/jgt/papers/Smits98/",
  abstract =     "Ray casting is the bottleneck of many rendering
