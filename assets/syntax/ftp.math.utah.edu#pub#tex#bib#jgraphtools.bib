@Article{Johannsen:1998:CBC,
  author =       "Andreas Johannsen and Michael B. Carter",
  title =        "Clustered Backface Culling",
  journal =      j-J-GRAPHICS-TOOLS,
  volume =       "3",
  number =       "1",
  pages =        "1--14",
  year =         "1998",
  CODEN =        "JGTOFD",
