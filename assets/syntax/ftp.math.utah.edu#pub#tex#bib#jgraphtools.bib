@Article{Zhang:1999:DIB,
  author =       "Hansong Zhang",
  title =        "A Derivation of Image-Based Rendering for Conventional
                 Three-Dimensional Graphics",
  journal =      j-J-GRAPHICS-TOOLS,
  volume =       "4",
  number =       "2",
  pages =        "27--36",
  year =         "1999",
  CODEN =        "JGTOFD",
  ISSN =         "1086-7651",
  bibdate =      "Thu Oct 12 17:08:13 2000",
