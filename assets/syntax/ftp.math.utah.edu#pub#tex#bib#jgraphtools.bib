}

@Article{Shirley:1997:LDM,
  author =       "Peter Shirley and Kenneth Chiu",
  title =        "A Low Distortion Map Between Disk and Square",
  journal =      j-J-GRAPHICS-TOOLS,
  volume =       "2",
  number =       "3",
  pages =        "45--52",
