@inproceedings{ADFT03,
	Author = {Aguilera, M. K. and Delporte-Gallet, C. and Fauconnier, H. and Toueg, S.},
	Booktitle = {Proc. of the 22$^{nd}$ annual Symp. on Principles of Distributed Computing (PODC'03)},
	Date-Added = {2006-07-24 18:54:53 +0900},
